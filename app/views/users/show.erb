<div class="text-center">
     <br />
    <h2><font color="red"><%="#{@user.username}" %>'s Page</font></h2>
    <h3>Email: <%= @user.email %></h3>
        <% if @user == current_user %>
        <h3> You have volunteered <%= "#{@user.entries.size}"%> time(s)</h3>
        <% else %>
        <h3> Entries logged: <%= "#{@user.entries.size}"%></h3>
        <% end %>
        <h3> Total Reward point(s): <%= "#{@user.entries.size}"%></h3>
        <br />
        <% @user.entries.each do |entry| %>
            <a href="/entries/<%=entry.id%>"><%=entry.title%></a>
            <h5>Created at: <%=entry.created_at.strftime('%A, %b %d, %Y')%> </h5>
            <h5>Updated at: <%=entry.updated_at.strftime('%A, %b %d, %Y')%> </h5>
        <% end %>
        <br />
        <br />
        <h2> Ready to commit more volunteer entries?</h2>
        <br />
        <ul class="actions">
            <li><a href="/entries/new" class="button">Add Journal Entry</a></li>
       	</ul>
</div>

