 <div class="text-center">
  <h1>Your Volunteer Entry </h1>
  <br />  
  <br />
    <p><%= @current_user.entry.title %></p>
    <p><%= @current_user.entry.location %></p>
    <p><%= @current_user.entry.date %></p>
    <p><%= @current_user.entry.description %></p>

    <% if current_user %>
    <form method="post" action="/entries/<%=@entry.id%>/delete">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete Entry">
    </form>
    <br />  
    <br />
    <a href="/entries/<%=@entry.id%>/edit">Edit Entry </a>
    <% end %>
    <br />  
    <br />
  </div>
