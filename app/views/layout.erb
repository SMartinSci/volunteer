<!DOCTYPE HTML>

<html>
	<head>
		<title>Charlottesville Volunteer App</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="http://0.0.0.0:9393/assets/css/main.css" />
	</head>
	<body class="is-preload">

		<!-- Wrapper -->
			<div id="wrapper">
				<!-- Main -->
					<div id="main">
						<div class="inner">
							<!-- Header -->
								<header id="header">
									<a href="index.html" class="logo"><strong>Charlottesville</strong> VA</a>
									<ul class="icons">
										<li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
										<li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
										<li><a href="#" class="icon fa-snapchat-ghost"><span class="label">Snapchat</span></a></li>
										<li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
										<li><a href="#" class="icon fa-medium"><span class="label">Medium</span></a></li>
									</ul>
								</header>

							<!-- Section -->
							
									<div class="features">
	
											<div class="content">
											</div>		
											<div class="error">
												<% if flash[:failure] %>
													<div id="flash" class="alert alert-danger text-center">
														<%= flash[:failure] %>
													</div>
												<% end %>
												<% if flash[:success] %>
													<div id="flash" class="alert alert-success text-center">
														<%= flash[:success] %>
													</div>
											<% end %>
											<%= yield %>
											</div>
										
									</div>
							
						</div>
					</div>

				<!-- Sidebar -->
					<div id="sidebar">
						<div class="inner">
							<!-- Menu -->
								<nav id="menu">
									<header class="major">
										<h2>Menu</h2>
									</header>
									<ul>
										<li><a href="/">Welcome</a></li>
										<li><a href="/signup">Sign Up</a></li>
										<li><a href="/login">Log In</a></li>
										<li><a href="/logs">Total Volunteer Points</a></li>
										<li>
											<span class="opener">Entries Submenu</span>
											<ul>
												<li><a href="/entries/new">New Entry</a></li>
												<li><a href="/users/<%=current_user.id %>">Your Entries</a></li>									
												<li><a href="/entries/index">All Charlottesville Volunteer Entries</a></li>
											</ul>
									</ul>
								</nav>

							<!-- Footer -->
								<footer id="footer">
									<p class="copyright">&copy; CharlottesvilleVolunteerApp. All rights reserved <a href="https://unsplash.com"></a> <a href="https://html5up.net"></a></p>
								</footer>
						</div>
					</div>
			</div>

		<!-- Scripts -->
			<script src="/assets/js/jquery.min.js"></script>
			<script src="/assets/js/browser.min.js"></script>
			<script src="/assets/js/breakpoints.min.js"></script>
			<script src="/assets/js/util.js"></script>
			<script src="/assets/js/main.js"></script>
	</body>
</html>